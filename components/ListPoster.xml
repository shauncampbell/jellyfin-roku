<?xml version="1.0" encoding="utf-8" ?>
<component name="ListPoster" extends="Group">
  <children>
    <Rectangle id="selectedIndicator" />
    <Rectangle id="backdrop" />
    <Poster id="poster" />
  </children>
  <interface>
    <field id="itemContent" type="node" onChange="itemContentChanged"/>
    <field id="itemWidth" type="integer" />
    <field id="itemHasFocus" type="boolean" onChange="itemFocusChanged"/>
    <!-- mediatype -->
  </interface>

  <script type="text/brightscript" uri="ListPoster.brs" />

</component>
